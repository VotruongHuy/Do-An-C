@model WebApplication1.Models.Expenditure

@{
    ViewBag.Title = "Details";
}

<h2>Chi tiết</h2>

<div>
    <h4>QuanLiChiTieu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày
        </dt>

        <dd>
            @Model.Ngày.Value.ToString("dd/MM/yyyy")
        </dd>

        <dt>
            Số tiền
        </dt>

        <dd>
            @Model.SốTiền.Value.ToString("N0");
        </dd>

        <dt>
            Ghi chú
        </dt>

        <dd>
            <pre>
            @Model.GhiChú
</pre>

        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Trở về danh sách", "Index")
</p>
