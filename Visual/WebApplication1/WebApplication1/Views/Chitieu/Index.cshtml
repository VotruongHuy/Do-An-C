@model IEnumerable<WebApplication1.Models.Expenditure>

@{
    ViewBag.Title = "Index";
}

<h2>IQuanLiChiTieu</h2>

<p>
    @Html.ActionLink("Thêm", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Ngày
        </th>
        <th>
            Số tiền
        </th>
        <th>
            Ghi chú
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Ngày.Value.ToString("dd/MM/yyyy")
            </td>
            <td>
                @item.SốTiền.Value.ToString("N0")
            </td>
            <td>
                <pre>   
                @item.GhiChú
            </pre>
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.id }) |
                @Html.ActionLink("Xem", "Details", new { id = item.id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>

